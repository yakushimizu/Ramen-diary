<div class="container">
  <div class="row">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>

      <h2>新規投稿</h2>

      <%= form_with model: @item, url: '/items', method: :post do |f| %>
      <div class="field">
        <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
      </div>
      <div class="field">
        <h4>店名</h4>
        <%= f.text_field :shop_name, class: "form-control" %>
      </div>

      <div class="field">
        <h4>住所</h4>
        <%= f.text_area :address, class: "form-control" %>
      </div>

      <div class="actions">
        <br><%= f.submit "投稿する" ,class: "btn btn-primary"%>
      </div>
      <% end %>

    </div>
  </div>
</div